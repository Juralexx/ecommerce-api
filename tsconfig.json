{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es5",
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "declaration": false,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "sourceMap": false,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strictNullChecks": false
    },
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "esm": true
    },
    "exclude": [
        "node_modules"
    ]
}