        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^6.7.0",
        "helmet": "^6.1.5",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "^7.0.3",
        "multer": "^1.4.5-lts.1",
        "sharp": "^0.32.0",
        "stripe": "^12.4.0"
